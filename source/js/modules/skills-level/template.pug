mixin setSkill(name, ClassName, vhValue)
  svg(class="skill-svg #{ClassName}", width="100", height="100", viewbox="0 0 100 100", preserveAspectRatio="xMinYMin slice")
    g.skill-svg__skill-circle
      circle.skill-circle--back(r="40", cx="50%", cy="50%", fill="none", stroke-dasharray="251.2 251.2")
      circle.skill-circle(r="40", cx="50%", cy="50%", fill="none",  stroke-dasharray="#{vhValue/100*251.2} 251.2")
      text.inner-text.uppercase(x="50%" y="50%", fill="#243994")= name

each range in skills
  .frontend-skill
    .widget-title #{range.skillRange}
    .diagrams
      each skill in range.skilles
        + setSkill(skill.skill, skill.skill, skill.value)

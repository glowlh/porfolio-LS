.frontend-skill
  .widget-title.widget-title--frontend Frontend
  .diagrams
    + setSkill("HTML5", "html")
    + setSkill("CSS3", "css")
    svg(class="skill-svg js", width="100", height="100", viewbox="0 0 100 100", preserveAspectRatio="xMaxYMax meet")
      g.skill-svg__skill-circle
        circle.skill-circle--back(r="40", cx="50%", cy="50%", fill="none", stroke-dasharray="250 251.2")
        circle.skill-circle(r="40", cx="50%", cy="50%", fill="none",  stroke-dasharray="0 251.2")
        g.inner-text
          text.text--two(x="50%" y="44%", fill="#243994") JavaScript
          text.text--two(x="50%" y="56%", fill="#243994") & jQuery
.backend-skill
  .widget-title Backend
  .diagrams
    + setSkill("PHP", "php")
    + setSkill("mySQL", "mysql")
    svg(class="skill-svg npm", viewbox="0 0 100 100", preserveAspectRatio="xMaxYMax meet")
      g.skill-svg__skill-circle
        circle.skill-circle--back(r="40", cx="50%", cy="50%", fill="none", stroke-dasharray="250 251.2")
        circle.skill-circle(r="40", cx="50%", cy="50%", fill="none",  stroke-dasharray="0 251.2")
        g.inner-text
          text.text--two(x="50%" y="44%", fill="#243994") Node.js
          text.text--two(x="50%" y="56%", fill="#243994") & npm
    + setSkill("Mongo.db", "mongo")
.workflow-skill
  .widget-title Workflow
  .diagrams
    + setSkill("Git", "git")
    + setSkill("Gulp", "gulp")
    + setSkill("Bower", "bower")

